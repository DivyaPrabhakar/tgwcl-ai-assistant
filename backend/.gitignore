# Create a simple, working .gitignore
cat > .gitignore << 'EOF'
# Environment variables
.env
.env.*

# Dependencies
node_modules/
package-lock.json
npm-debug.log*
yarn-debug.log*

# Cache and data
cached_data/
*.cache

# Logs
*.log
logs/

# IDE files
.vscode/
.idea/
*.swp

# OS files
.DS_Store
Thumbs.db

# Temporary files
tmp/
temp/
*.backup
EOF